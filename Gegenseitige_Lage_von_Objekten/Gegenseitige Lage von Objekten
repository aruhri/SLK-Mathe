\newcommand{\Vektor}[2]{\begin{pmatrix} #1 \\ #2 \end{pmatrix}}
\newcommand{\vektor}[3] {\begin{pmatrix} #1 \\ #2 \\ #3 \end{pmatrix}}

\renewcommand{\labelitemi}{\textbf{\alph{itemi}.)}}
